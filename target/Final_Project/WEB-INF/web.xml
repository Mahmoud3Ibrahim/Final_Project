<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>PTFMS</display-name>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>jsp/login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ptfms.final_project.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Vehicle Servlet -->
    <servlet>
        <servlet-name>VehicleServlet</servlet-name>
        <servlet-class>com.ptfms.final_project.controller.VehicleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VehicleServlet</servlet-name>
        <url-pattern>/vehicles</url-pattern>
    </servlet-mapping>

    <!-- Fuel Servlet -->
    <servlet>
        <servlet-name>FuelServlet</servlet-name>
        <servlet-class>com.ptfms.final_project.controller.FuelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FuelServlet</servlet-name>
        <url-pattern>/fuel</url-pattern>
    </servlet-mapping>

    <!-- GPS Servlet -->
    <servlet>
        <servlet-name>GPSServlet</servlet-name>
        <servlet-class>com.ptfms.final_project.controller.GPSServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GPSServlet</servlet-name>
        <url-pattern>/gps</url-pattern>
    </servlet-mapping>

    <!-- Maintenance Servlet -->
    <servlet>
        <servlet-name>MaintenanceServlet</servlet-name>
        <servlet-class>com.ptfms.final_project.controller.MaintenanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MaintenanceServlet</servlet-name>
        <url-pattern>/maintenance</url-pattern>
    </servlet-mapping>
    
    <!-- Reports Servlet -->
<servlet>
    <servlet-name>ReportsServlet</servlet-name>
    <servlet-class>com.ptfms.final_project.controller.ReportsServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ReportsServlet</servlet-name>
    <url-pattern>/reports</url-pattern>
</servlet-mapping>

    <!-- Main Controller Servlet (Dashboard) -->
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>com.ptfms.final_project.controller.MainController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Error Page -->
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/login.jsp</location>
    </error-page>

    <!-- Session Timeout -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
